{
  "extends": "eslint-config-wesbos/tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "node"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
